@model LoginForm.Models.PlayDateVM


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Playdate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PDTitle" class="control-label"><a>Name of the playdate:</a></label>
                <input asp-for="PDTitle" class="form-control" />
                <span asp-validation-for="PDTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateForPlayDate" class="control-label"><a>Date of the playdate</a></label>
                <input asp-for="DateForPlayDate" class="form-control" />
                <span asp-validation-for="DateForPlayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
				<span asp-validation-for="PlayDateAccepted" class="text-danger"></span>
                    <input type="hidden" asp-for="Id" />

                <dt class="col-sm-2">
                    <a>Is invite Accepted?</a>
                </dt>
                <dd class="col-sm-10">
                    <div class="form-check">
                            @{
                                bool isChecked = Model.PlayDateAccepted ?? false;
                            }
                        <input class="form-check-input" type="checkbox" id="flexCheckChecked" name="PlayDateAccepted" value="true" @(isChecked ? "checked" : "")>
                        <label class="form-check-label" for="flexCheckChecked">
                            Playdate Accepted
                        </label>
                        <input type="hidden" name="PlayDateAccepted" value="false" />
                    </div>
                </dd>
    </div>
            <input type="hidden" asp-for="Id" />
            @*Save edits function*@
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>




