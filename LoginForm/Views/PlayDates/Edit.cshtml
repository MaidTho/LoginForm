@model LoginForm.Models.PlayDate


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Playdate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PDTitle" class="control-label"><a>Name of the playdate:</a></label>
                <input asp-for="PDTitle" class="form-control" />
                <span asp-validation-for="PDTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayDateAccepted" class="control-label"></label>
                <input type="submit" asp-for="PlayDateAccepted" value="accept" class="btn btn-success" />
                <input type="submit" asp-for="PlayDateAccepted" value="deny" class="btn btn-danger" />
                <span asp-validation-for="PlayDateAccepted" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            
            <div class="form-group">
                <label asp-for="DateForPlayDate" class="control-label"><a>Date of the playdate</a></label>
                <input asp-for="DateForPlayDate" class="form-control" />
                <span asp-validation-for="DateForPlayDate" class="text-danger"></span>
            </div>
            
            @*Save edits function*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-secondary">Back to Playdate list</a>
            </div>
        
        
        </form>
    </div>
</div>


