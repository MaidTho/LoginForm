@model IEnumerable<PlayDateVM>

@{
    ViewData["Title"] = "Index";
}

<h1>playdates </h1>

<p>
    <a asp-action="Create" class="btn btn alert-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserCreator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayDateAccepted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateForPlayDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserCreator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayDateAccepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateForPlayDate)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-solid fa-pen"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-secondary"><i class="fa-solid fa-calendar-day"></i></a> |
              @*<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>*@
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"> <i class="fa-solid fa-trash"></i> </button>
            </td>
        </tr>
}
    </tbody>
</table>
<form id="DeleteForm" asp-action="Delete">
    <input type="hidden" id="PlaydateId" name="Id" />
</form>

@section Scripts{
    <script>
        $(function(){
            new DataTable('.table');
        
            $('.deleteBtn').click(function(e) { 
                swal({
                    title:"are you sure?",
                    text: "are you sure want to delete this ?",
                    icon: "warning",
                    buttons: true,
                    dangermode:true 
                }).then((confirm) => {
                        if (confirm) {
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#PlaydateId').val(id);
                            $('#DeleteForm').submit();
                        
                        }
                    });
            });
        });
    </script>
}
